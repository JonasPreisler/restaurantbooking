<%= form_for :booking, method: :get do |t| %>
  <div style="position: relative">
    <%= text_field_tag(:date, value = nil, html_options = { class: 'form-control datepicker', placeholder: 'mm/dd/yyyy' }) %>

    <%= text_field_tag(:time, value = nil, html_options = { class: 'form-control timepicker', placeholder: 'time' }) %>
    <%= t.submit %>
  </div>
<% end %>


<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.date %></td>
        <td><%= reservation.time %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
